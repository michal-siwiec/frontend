{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "paths": {
      "tests/*": ["../tests/*"] 
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "tests"]
}
