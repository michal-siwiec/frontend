{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "data/*": ["data/*"],
      "graphql/*": ["graphql/*"],
      "hooks/*": ["hooks/*"],
      "redux/*": ["redux/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"],
      "validators/*": ["validators/*"],
      "pages/*": ["pages/*"],
      "contexts/*": ["contexts/*"],
      "layouts/*": ["layouts/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "noEmit": true 
  },
  "include": ["src"]
}
